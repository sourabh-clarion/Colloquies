<h3>Welcome</h3>

<table border="2px">
 <tr>
   <th> Name </th>
   <th> Email</th>
   <th> Role </th>
   <th colspan="2"> Actions </th>
 </tr>
 <% @users.each do |user| %>
 <tr> 
   <td><%= user.name %></td> 
   <td><%= user.email%> </td>
   <td><%= user.roles.map {|r| r.role }.join(', ') %> </td> 
   
   <% if user.roles.pluck(:role).include? ("admin") %>
      <td><%= link_to "remove", users_user_path(user.id), method: :delete %></td>
      <td><%= link_to "asModerator", users_user_set_moderator_path(user.id)%></td>
   <% elsif %>
      <% user.roles.pluck(:role).include? ("moderator") %>
      <td><%= link_to "asAdmin", users_user_set_admin_path(user.id) %></td>  
      <td><%= link_to "opentag", users_user_path(user.id)%>/<%= link_to "remove", users_user_path(user.id), method: :delete %></td>
    <% else %>
      <td><%=link_to "asAdmin", users_user_set_admin_path(user.id)%></td>
      <td><%= link_to "asModerator", users_user_set_moderator_path(user.id)%></td>
   <% end %>
 </tr>
 <% end %>
</table>


